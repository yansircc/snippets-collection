{
	"name": "snippets-collection",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"reset": "rm -rf .wrangler && rm -rf .next && rm -rf node_modules && bun i && bun dev",
		"build": "next build",
		"db:clean": "bun scripts/clean-database.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push:local": "wrangler d1 migrations apply D1_DATABASE --local",
		"db:push:remote": "wrangler d1 migrations apply D1_DATABASE --remote",
		"db:studio": "drizzle-kit studio",
		"deploy": "wrangler deploy src/server/index.ts",
		"deploy:test": "bun scripts/test-deploy.sh",
		"dev": "next dev",
		"dev:wrangler": "wrangler dev --local --persist-to=.wrangler/state",
		"lint": "next lint",
		"start": "next start",
		"env:sync:local": "bun scripts/sync-dev-vars.ts",
		"env:sync:remote": "wrangler secret bulk .env"
	},
	"dependencies": {
		"@ai-sdk/openai": "^1.3.21",
		"@ai-sdk/react": "^1.2.11",
		"@clerk/nextjs": "^6.18.5",
		"@cloudflare/d1": "^1.4.1",
		"@hookform/resolvers": "^5.0.1",
		"@monaco-editor/react": "^4.7.0",
		"@radix-ui/react-dialog": "^1.1.13",
		"@radix-ui/react-icons": "^1.3.2",
		"@radix-ui/react-label": "^2.1.6",
		"@radix-ui/react-select": "^2.2.2",
		"@radix-ui/react-slot": "^1.2.2",
		"@tailwindcss/postcss": "^4.0.0",
		"@tanstack/react-query": "^5.51.23",
		"ai": "^4.3.13",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.39.0",
		"hono": "^4.7.0",
		"jose": "^6.0.10",
		"jstack": "^1.1.1",
		"lucide-react": "^0.510.0",
		"next": "^15.1.6",
		"next-themes": "^0.4.6",
		"postgres": "^3.4.5",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-hook-form": "^7.56.3",
		"shadcn-ui": "^0.9.5",
		"sonner": "^2.0.3",
		"superjson": "^2.2.1",
		"tailwind-merge": "^3.3.0",
		"tailwindcss-animate": "^1.0.7",
		"workers-ai-provider": "^0.3.0",
		"zod": "^3.24.4"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250214.0",
		"@types/node": "^22.10.6",
		"@types/react": "^19.0.7",
		"@types/react-dom": "^19.0.3",
		"better-sqlite3": "^11.9.1",
		"dotenv": "^16.4.5",
		"drizzle-kit": "^0.30.1",
		"eslint": "^9.18.0",
		"eslint-config-next": "^15.1.4",
		"eslint-plugin-drizzle": "^0.2.3",
		"postcss": "^8",
		"tailwindcss": "^4.0.0",
